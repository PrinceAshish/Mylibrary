<div>
    <label for="titleId" >Title: </label>
    <input type="text" name="title" id="titleId" value="<%= book.name %>">
</div>
<div>
    <label for="nameid" >Author: </label>
    <select name="author">
        <% authors.forEach(author => { %>
          <% if (author.id === book.author) { %>
            <option selected label="<%= author.name %>" value="<%= author.id %>">
          <% } else { %>
            <option label="<%= author.name %>" value="<%= author.id %>">
          <% } %>
        <% }) %>
        </select>
</div>

<div>
    <label for="dateId">Date :</label>
    <input type="date" name="publishDate" id="dateId" value="<%= book.publishDate == null ? '' : book.publicDate.toISOString().split('t')[0] %> ">
</div>
<div>
    <label for="pageId">Page Count :</label>
    <input type="number" name="pageCount" id="pageId" min="1" value="<%= book.pageCount %> ">
</div>
<div>
    <label for="coverID">Cover :</label>
    <input type="file" name="cover" id="coverID" >
</div>
<div>
    <label for="desId">Description :</label>
    <textarea name="description" id="desId" ><%= book.description %> </textarea>
</div>
